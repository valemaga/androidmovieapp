<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Page_Title">
        <item name="android:textSize">30dp</item>
        <item name="android:background">@color/purple_700</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="detail_poster">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!--Right Column Movie Detail-->
    <style name="detail_right_column">
        <item name="android:foregroundGravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="upper_short_text" parent="detail_right_column">
        <item name="android:layout_marginTop">44dp</item>
        <!--insert style-->
    </style>
    <style name="middle_short_text" parent="detail_right_column">
        <!--insert style-->
    </style>
    <style name="bottom_short_text" parent="detail_right_column">
        <!--insert style-->
    </style>

    <!--Overview Column-->
    <style name="overview_column">
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>
    <style name="description_text" parent="overview_column">
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="section_text_title" parent="overview_column">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="trailer_container">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
    <style name="big_sub_text">
        <item name="android:textStyle">bold</item>
    </style>


</resources>